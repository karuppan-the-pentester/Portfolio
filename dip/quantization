grayImage = imread("/MATLAB Drive/cameraman.jpg");
subplot(2, 2, 1);
imshow(grayImage, []);
title('Original image');
[rows, columns, numberOfColorChannels] = size(grayImage);
subplot(2, 2, 2);
imshow(grayImage, []);
imhist(grayImage);
axis on;
grid on;
title('Histogram of Original image');
drawnow;
quantizedImage = imquantize(grayImage, linspace(0, 255, 6));
quantizedImage = uint8(255 * mat2gray(quantizedImage));
subplot(2, 2, 3);
imshow(quantizedImage, []);
title('Quantized image');
subplot(2, 2, 4);
imhist(uint8(quantizedImage));
axis on;
grid on;
title('Histogram of Quantized Image');
