#include<stdio.h>
int m,n,x[4],h[4],y[4],i,j,temp[30],k,x2[30],a[30];
void main()
{
    int x[]={1,2,3,4};
    int h[]={5,6,7,8};
    int m=4;int n=4;
    if(m-n!=0)
    {
        if(m>n)
         {
         for(i=n;i<m;i++)
         h[i]=0;
         n=m;
    }
        for(i=n;i<m;i++)
        x[i]=0;
        m=n;;
    }
          y[0]=0;
          a[0]=h[0];
          for(j=1;j<=n;j++)
              a[j]=h[n-j];
          for(i=0;i<n;i++)
             y[0]+=x[i]*a[i];
          for(k=1;k<n;k++)
    {
              y[k]=0;
             for(j=1;j<n;j++)
                 x2[j]=a[j-1];
             x2[0]=a[n-1];
             for(i=0;i<n;i++)
             {
             a[i]=x2[i];
             y[k]+=x[i]*x2[i];
    }

  }
    printf("the circular convolution is\n");
    for(i=0;i<n;i++)
    printf("%d\t",y[i]);
}
